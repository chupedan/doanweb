@model QLGO.Models.HomeModels
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <!-- ========================= SECTION MAIN  ========================= -->
    <section class="section-intro padding-y">
        <div class="container">
            <!-- ==============  COMPONENT SLIDER  BOOTSTRAP ============  -->
            <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                    <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                    <li data-target="#carousel1_indicator" data-slide-to="3"></li>
                    <li data-target="#carousel1_indicator" data-slide-to="4"></li>
                    <li data-target="#carousel1_indicator" data-slide-to="5"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Content/images/banners/1.png">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/images/banners/2.png">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/images/banners/3.png">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/images/banners/4.png">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/images/banners/5.png">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/images/banners/6.png">
                    </div>

                </div>
                <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <!-- ============ COMPONENT SLIDER BOOTSTRAP end.// ===========  .// -->

        </div> <!-- container end.// -->
    </section>
    <!-- =============== SECTION DEAL =============== -->
    <section class="padding-bottom">
        <div class="card card-deal">
            <div class="col-heading content-body">
                <header class="section-heading">
                    <h3 class="section-title">Giảm sập sàn</h3>
                </header><!-- sect-heading -->
                <div class="row no-gutters items-wrap">
                    @foreach (var item in Model.lstSP.Take(4))
                    {
                        <div class="col-md col-6">
                            <figure class="card-product-grid card-sm">
                                <a href="@Url.Action("Details", "SanPhams", new { id = item.IDSP })" class="img-wrap">
                                    <img src="~/Content/images/items/@item.HinhanhSP">
                                </a>
                                <div class="text-wrap p-3">
                                    <a href="#" class="title">@item.TenSP</a>
                                    <div class="price mt-1" style="text-decoration: line-through;">@item.GiaBan</div>
                                </div>
                            </figure>
                        </div> <!-- col.// -->}
                </div>
            </div>

    </section>
    <!-- =============== SECTION DEAL // END =============== -->
    <!-- =============== SECTION ITEMS =============== -->
    <section class="padding-bottom-sm">

        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Đề xuất</h4>
        </header>
        <div class="row row-sm">
            @foreach (var item in Model.lstSP.Take(6))
            {
                <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                    <div class="card card-sm card-product-grid">
                        <a href="@Url.Action("Details", "SanPhams", new { id = item.IDSP })" class="img-wrap"> <img src="~/Content/images/items/@item.HinhanhSP"> </a>
                        <figcaption class="info-wrap">
                            <a href="#" class="title">@item.TenSP</a>
                            <div class="price mt-1">@item.GiaBan</div> <!-- price-wrap.// -->
                        </figcaption>
                    </div>
                </div>} <!-- col.// -->
        </div> <!-- row.// -->
    </section>
    <!-- =============== SECTION ITEMS .//END =============== -->
</div>
<!-- container end.// -->
