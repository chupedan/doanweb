<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="cache-control" content="max-age=604800" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <meta name="description" content="Bootstrap e-commerce html template similar to Alibaba">
    <meta name="keywords" content="Online template, shop, theme, template, html, css, bootstrap 4">

    <title>EATMOEW</title>

    <link href="~/Content/images/favicon.ico" rel="shortcut icon" type="image/x-icon">

    <!-- jQuery -->
    <script src="~/Scripts/js/jquery-2.0.0.min.js" type="text/javascript"></script>

    <!-- Bootstrap4 files-->
    <script src="~/Scripts/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" />

    <!-- Font awesome 5 -->
    <link href="~/Content/fonts/fontawesome/css/all.min.css" type="text/css" rel="stylesheet">
    <!-- custom style -->
    <link href="~/Content/css/ui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" type="text/css" />
    <!-- custom javascript -->
    <script src="~/Scripts/js/script.js" type="text/javascript"></script>
</head>
<body>

    <b class="screen-overlay"></b>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top" style="background-color: rgba(255, 255, 255, 0.7);">
        <a href="@Url.Action("Index", "Home")" class="brand-wrap">

            <img class="logo" style="height:120px;width:70px" src="~/Content/images/pngegg.png"><h4></h4>
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Index", "LoaiSPs")">Doanh mục <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("DangNhap", "Home")">Đăng nhập <span class="sr-only">(current)</span></a>
                </li>
                @{
                    var userID = Session["user"] != null ? Session["user"].ToString() : "";
                    var hoten = Session["hoten"] != null ? Session["hoten"].ToString() : "";
                }
            <li class="nav-item" style="color: white">
                <a class="nav-link" href="">Xin chào, @hoten (Mã người dùng: @userID) <span class="sr-only"</span></a>
            </li>
            </ul>
            <div class="widgets-wrap float-md-right">

                <div class="widget-header mr-3">
                    <a href="@Url.Action("TimKiem", "HoaDon_63133716")" class="widget-view">
                        <div class="icon-area">
                            <i class="fa fa-store"></i>
                        </div>
                        <small class="text"> Orders </small>
                    </a>
                </div>
                <div class="widget-header">
                    <a href="@Url.Action("Index", "GioHang")" class="widget-view">
                        <div class="icon-area">
                            <i class="fa fa-shopping-cart"></i>
                            <span class="notify" id="CartCount">@Session["count"]<span>
                        </div>
                        <small class="text"> Cart </small>
                    </a>
                </div>
            </div>
    </nav>
    @RenderBody()

    <footer class="section-footer bg-dark">
        <div class="container">
            <section class="footer-top padding-y-lg text-white">
                <div class="row">


                    <aside class="col-md col-6">
                        <h6 class="title">Trợ giúp</h6>
                        <ul class="list-unstyled">
                            <li> <a href="@Url.Action("Index", "LoaiSPs")">Danh mục</a></li>
                            <li> <a href="@Url.Action("Index", "GioHang_63133716")">giỏ hàng</a></li>
                            <li> <a href="@Url.Action("TimKiem", "HoaDon_63133716")">tra cứu hóa đơn</a></li>

                        </ul>
                    </aside>
                    <aside class="col-md col-6">
                        <h6 class="title">Tài khoản</h6>
                        <ul class="list-unstyled">
                            <li>  @Html.ActionLink("Đăng nhập", "DangNhap", "Home")</li>
                            <li> <a href="#"> My Orders </a></li>
                        </ul>
                    </aside>

                </div> <!-- row.// -->
            </section>	<!-- footer-top.// -->

            <section class="footer-bottom text-center">

                <p class="text-muted"> &copy 2024 DoAnWeb</p>
                <br>
            </section>
        </div><!-- //container -->
    </footer>
    <!-- ========================= FOOTER END // ========================= -->



</body>
</html>