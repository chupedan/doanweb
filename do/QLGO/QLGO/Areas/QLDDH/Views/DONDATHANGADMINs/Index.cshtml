@model IEnumerable<QLGO.Models.DONDATHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<p>
    @Html.ActionLink("Duyệt đơn đặt hàng", "ChuaDuyet")
</p>

<table class="table">
    <tr>
        <th>
            Mã đơn đặt hàng
        </th>
        <th>
            Tình trạng
        </th>
        <th>
            Ngày đặt hàng
        </th>
        <th>
            Ngày giao hàng
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Loại thanh toán
        </th>
        <th>
            Tên khách hàng
        </th>
        @*<th>
            Tên nhân viên
        </th>*@
        <th>
            Tên người đặt hàng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDDDH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TINHTRANG.TenTT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDatHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayGiaoHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LOAITHANHTOAN.TenLTT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGUOIDUNG.TenND)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.NGUOIDUNG1.TenND)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenNguoiDH)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDDDH }) |
                @Html.ActionLink("Xem chi tiết", "Details", new { id = item.IDDDH }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDDDH })
            </td>
        </tr>
    }

</table>
