@model IEnumerable<QLGO.Models.LOAINGUOIDUNG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>LOẠI NGƯỜI DÙNG</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã loại người dùng
        </th>
        <th>
            Tên loại người dùng
        </th>
        <th>
            Lương
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.IDLND)

            </th>
            <td>
                @Html.DisplayFor(modelItem => item.TenLND)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Luong)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDLND }) |
                @Html.ActionLink("Xem chi tiết", "Details", new { id = item.IDLND }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDLND })
            </td>
        </tr>
    }

</table>
