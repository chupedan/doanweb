@model IEnumerable<QLGO.Models.NHAPKHO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã phiếu nhập
        </th>
        <th>
            Ngày nhập kho
        </th>
        <th>
            Tên người dùng
        </th>
        <th>
            Tên nhà cung cấp
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDPhieuNhap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayNhapKho.Date.ToShortDateString())
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGUOIDUNG.TenND)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NHACUNGCAP.TenNCC)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDPhieuNhap }) |
                @Html.ActionLink("Xem chi tiết", "Details", new { id = item.IDPhieuNhap }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDPhieuNhap })
            </td>
        </tr>
    }

</table>
