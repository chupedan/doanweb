@model IEnumerable<QLGO.Models.SANPHAM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Số lượng kho
        </th>
        <th>
            Số lượng quầy
        </th>
        <th>
            Giá bán
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Tên đơn vị tính
        </th>
        <th>
            Tên loại sản phẩm
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SLKho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SLQuay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HinhanhSP)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DONVITINH.TenDVT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LOAISANPHAM.TenLSP)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDSP }) |
                @Html.ActionLink("Xem chi tiết", "Details", new { id = item.IDSP }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDSP })
            </td>
        </tr>
    }

</table>
