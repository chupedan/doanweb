            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayXuatHD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGUOIDUNG.TenND)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGUOIDUNG1.TenND)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LOAITHANHTOAN.TenLTT)
            </td>

            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDHD }) |
                @Html.ActionLink("Xem chi tiết", "Details", new { id = item.IDHD }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDHD })
            </td>
